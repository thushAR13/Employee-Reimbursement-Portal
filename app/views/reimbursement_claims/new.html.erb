<div class="container mt-5">
  <h1><%= @claim.new_record? ? 'New Reimbursement Claim' : 'Edit Reimbursement Claim' %></h1>
  <%= form_with(model: [@company, @employee, @claim], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :purpose %>
      <%= form.text_field :purpose, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, step: 0.01, class: 'form-control', required: true, min: 0.01 %>
    </div>
    <div class="form-group">
      <%= form.label :date_of_expenditure %>
      <%= form.date_field :date_of_expenditure, class: 'form-control', required: true %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :receipt %>
      <%= form.file_field :receipt, class: 'form-control', required: true %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
  <% end %>
</div>
